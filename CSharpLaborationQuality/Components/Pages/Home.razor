@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<div style="height: 94vh; background-image: url('Images/NatureBackGround.jpg'); background-size: cover; background-position: center; position: relative;">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; animation: fadeInSlow 5s;">
        <h1 style="font-family: 'Georgia', serif; font-size: 6rem; margin: 0; color: #e0e0e0; -webkit-text-stroke: 2px #000000; text-shadow: 4px 4px 15px rgba(0, 0, 0, 1), -4px -4px 15px rgba(0, 0, 0, 1); animation: popOut 1s infinite alternate;">
            <span style="color: #ff6f00;">H</span>
            <span style="color: #ff8f00;">e</span>
            <span style="color: #ffa000;">l</span>
            <span style="color: #ffb300;">l</span>
            <span style="color: #ffc107;">o</span>,
            <span style="color: #66bb6a;">w</span>
            <span style="color: #4caf50;">o</span>
            <span style="color: #43a047;">r</span>
            <span style="color: #388e3c;">l</span>
            <span style="color: #2e7d32;">d</span>!
        </h1>
        <br /> <br />
        <br /> <br /> <br />
        <div style="background-color: rgba(0, 0, 0, 0.4); border-radius: 10px; display: inline-block;">
            <p style="font-family: Georgia, sans-serif; font-size: 2rem; margin-top: 10px; color: darkorange; font-weight:bold; -webkit-text-stroke: 1px #000000; text-shadow: 4px 4px 10px rgba(0, 0, 0, 1);">
                Welcome to my first website... (okay, second)
            </p>
            <br />
            <p style="font-family: Georgia, sans-serif; font-size: 2rem; margin-top: 20px; color: lightgoldenrodyellow; font-weight:bold; -webkit-text-stroke: 1px #000000; text-shadow: 4px 4px 10px rgba(0, 0, 0, 1);">
                I am excited to share my journey of learning web development with you! Stay tuned for more updates and features.
            </p>
            <br />
            <p style="font-family: Georgia, sans-serif; font-size: 2rem; margin-top: 20px; color: greenyellow; font-weight:bold; -webkit-text-stroke: 1px #000000; text-shadow: 4px 4px 10px rgba(0, 0, 0, 1);">
                Press the button to start with creating a user.
            </p>
        </div>

        <NavLink href="/CreateNewUser" style="text-decoration: none;">
            <button style="background-color: #4caf50; color: white; border: none; padding: 10px 20px; font-size: 1.2rem; margin-top: 20px; cursor: pointer; transition: transform 0.2s, background-color 0.2s; border-radius: 5px; animation: popOut 1s infinite alternate;"
                    onmouseover="this.style.transform='scale(1.1)'; this.style.animation='none'"
                    onmouseout="this.style.transform='scale(1)'; this.style.animation='popOut 1s infinite alternate'">
                Create User
            </button>
        </NavLink>
    </div>
</div>
