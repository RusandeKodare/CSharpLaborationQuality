@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<div style="height: 94vh; background-image: url('https://i.redd.it/5ubq6jf2jgx01.jpg'); background-size: cover; background-position: center; position: relative;">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; animation: fadeInSlow 5s;">
        <h1 style="font-family: 'Georgia', serif; font-size: 4rem; margin: 0; color: #ffffff; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.9), -2px -2px 10px rgba(0, 0, 0, 0.9); animation: popOut 1s infinite alternate;">
            <span style="color: #ff5733;">H</span>
            <span style="color: #fbc02d;">e</span>
            <span style="color: #64b5f6;">l</span>
            <span style="color: #7e57c2;">l</span>
            <span style="color: #4caf50;">o</span>,
            <span style="color: #ff5733;">w</span>
            <span style="color: #fbc02d;">o</span>
            <span style="color: #64b5f6;">r</span>
            <span style="color: #7e57c2;">l</span>
            <span style="color: #4caf50;">d</span>!
        </h1>
        <p style="font-family: Georgia, sans-serif; font-size: 2rem; margin-top: 10px; color: #ffffff; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.9); animation: popOut 1s infinite alternate;">
            Welcome to my first website... (okay, second)
        </p>
        <p style="font-family: Georgia, sans-serif; font-size: 1.5rem; margin-top: 20px; color: #ffffff; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.9); animation: popOut 1s infinite alternate;">
            I am excited to share my journey of learning web development with you! Stay tuned for more updates and features.
        </p>

        <p style="font-family: Georgia, sans-serif; font-size: 1.2rem; margin-top: 20px; color: #ffffff; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.9); animation: popOut 1s infinite alternate;">
            Press the button to start with creating a user.
        </p>
        <NavLink href="/CreateNewUser" style="text-decoration: none;">
            <button style="background-color: #4caf50; color: white; border: none; padding: 10px 20px; font-size: 1.2rem; margin-top: 20px; cursor: pointer; transition: transform 0.2s, background-color 0.2s; border-radius: 5px; animation: popOut 1s infinite alternate;"
                    onmouseover="this.style.transform='scale(1.1)'; this.style.animation='none'"
                    onmouseout="this.style.transform='scale(1)'; this.style.animation='popOut 1s infinite alternate'">
                Create User
            </button>
        </NavLink>
    </div>
</div>

<style>
    /* Slow Fade In Animation */
    @@keyframes fadeInSlow {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }

    /* Pop Out Animation */
    @@keyframes popOut {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }
    }
</style>