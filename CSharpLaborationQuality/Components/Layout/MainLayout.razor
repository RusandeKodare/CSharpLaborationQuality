@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
<div class="music-player">
    <iframe height="150"
            src="https://www.youtube.com/embed/Hy8kmNEo1i8"
            frameborder="0" allow="autoplay"></iframe>
</div>

<style>
    .music-player {
        position: fixed;
        top: 52.6rem; 
        right: 1.5rem; 
        width: 200px;
        height: 150px;
        z-index: 1000; 
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        overflow: hidden;
    }

        .music-player iframe {
            width: 100%;
            height: 100%;
        }
</style>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
